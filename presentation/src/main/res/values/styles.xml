<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlHighlight">#42C5CAE9</item>
    </style>

    <style name="ProgressDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
           <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="bottomNavigationMain" parent="Widget.Design.BottomNavigationView">

    </style>

    <style name="titleCocktailText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_bold_black</item>
    </style>
    <style name="titleCocktailTheDayText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text_bold_black</item>
    </style>

</resources>
